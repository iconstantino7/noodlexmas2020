@page
@model AudreyXmas2020.Pages.LetterModel
@{
}

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Minimal F</title>
    <meta name="description" content="Minimal Form Interface: Simplistic, single input view form" />
    <meta name="keywords" content="form, minimal, interface, single input, big form, responsive form, transition" />
    <meta name="author" content="Codrops" />
    <link rel="stylesheet" type="text/css" href="~/css/normalize.css" />
    <link rel="stylesheet" type="text/css" href="~/css/demo.css" />
    <link rel="stylesheet" type="text/css" href="~/css/component.css" />
    <script src="~/js/modernizr.custom.js"></script>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Mountains+of+Christmas:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>
    <style>
        .final-message p span {
            color: black !important;
            font-weight: bold !important;
        }
    </style>
    <div class="container">

        <header class="codrops-header">
            <h1 class="text-light">Letter to Santa Claus </h1>
        </header>
        <section>
            <form id="theForm" class="simform" autocomplete="off">
                <div class="simform-inner">
                    <ol class="questions">
                        <li>
                            <span><label for="q1">Enter a name:</label></span>
                            <input id="q1" name="q1" type="text" />
                        </li>
                        <li>
                            <span><label for="q2">Enter another name:</label></span>
                            <input id="q2" name="q2" type="text" />
                        </li>
                        <li>
                            <span><label for="q3">Enter a type of animal:</label></span>
                            <input id="q3" name="q3" type="text" />
                        </li>
                        <li>
                            <span><label for="q4">Enter a color:</label></span>
                            <input id="q4" name="q4" type="text" />
                        </li>

                        <li>
                            <span><label for="q5">Enter a type of animal:</label></span>
                            <input id="q5" name="q5" type="text" />
                        </li>
                        <li>
                            <span><label for="q6">Enter an adjective:</label></span>
                            <input id="q6" name="q6" type="text" />
                        </li>
                        <li>
                            <span><label for="q7">Enter type of animal(plural):</label></span>
                            <input id="q7" name="q7" type="text" />
                        </li>
                        <li>
                            <span><label for="q8">Enter a verb:</label></span>
                            <input id="q8" name="q8" type="text" />
                        </li>
                        <li>
                            <span><label for="q9">Enter an adjective:</label></span>
                            <input id="q9" name="q9" type="text" />
                        </li>
                        <li>
                            <span><label for="q10">Enter an adjective(weather-related):</label></span>
                            <input id="q10" name="q10" type="text" />
                        </li>
                        <li>
                            <span><label for="q11">Enter a body part:</label></span>
                            <input id="q11" name="q11" type="text" />
                        </li>
                        <li>
                            <span><label for="q11b">Enter a noun:</label></span>
                            <input id="q11b" name="q11b" type="text" />
                        </li>
                        <li>
                            <span><label for="q12">Enter type of animal(plural):</label></span>
                            <input id="q12" name="q12" type="text" />
                        </li>
                        <li>
                            <span><label for="q13">Enter a verb(past-tense):</label></span>
                            <input id="q13" name="q13" type="text" />
                        </li>
                        <li>
                            <span><label for="q14">Enter a color:</label></span>
                            <input id="q14" name="q14" type="text" />
                        </li>
                        
                    </ol><!-- /questions -->
                    <button class="submit" type="submit">Send answers</button>
                    <div class="controls">
                        <button class="next"></button>
                        <div class="progress"></div>
                        <span class="number">
                            <span class="number-current"></span>
                            <span class="number-total"></span>
                        </span>
                        <span class="error-message"></span>
                    </div><!-- / controls -->
                </div><!-- /simform-inner -->
                <div class="final-message" style="background-color: white !important;">
                    <p style="font-family: 'Mountains of Christmas' !important;">
                        You know Dasher and <span id="1"></span> and Prancer and Vixen<br />
                        Comet and Cupid and <span id="2"></span> and Blitzen<br />
                        But do you recall<br />
                        The most famous <span id="3"></span> of all?<br />
                        Audrey the <span id="4"></span>-Nosed <span id="5"></span><br />
                        Had a very <span id="6"></span> nose<br />
                        And if you ever saw it<br />
                        You would even say it glows<br />
                        All of the other <span id="7"></span><br />
                        Used to <span id="8"></span> and call her names<br />
                        They never let poor Audrey<br />
                        Join in any <span id="9"></span> games<br />
                        Then one <span id="10"></span> Christmas Eve<br />
                        Santa came to say<br />
                        "Audrey, with your <span id="11"></span> so bright<br />
                        Won't you guide my <span id="11b"></span> tonight?"<br />
                        Then how the <span id="12"></span> loved her<br />
                        As they <span id="13"></span> out with glee<br />
                        "Audrey the <span id="14"></span>-Nosed Reindeer<br />
                        You'll go down in history"<br />
                        <br />
                        <br />

                        <a href="Stories">Back to Stories</a>
                    </p>
                </div>
            </form><!-- /simform -->
        </section>

    </div><!-- /container -->
    <script src="~/js/classie.js"></script>
    <script src="~/js/stepsForm.js"></script>
    <script>
        var theForm = document.getElementById('theForm');

        new stepsForm(theForm, {
            onSubmit: function (form) {
                // hide form
                classie.addClass(theForm.querySelector('.simform-inner'), 'hide');

                /*
                form.submit()
                or
                AJAX request (maybe show loading indicator while we don't have an answer..)
                */

                // let's just simulate something...
                var messageEl = theForm.querySelector('.final-message');
                $('#1').html($('#q1').val());
                $('#2').html($('#q2').val());
                $('#3').html($('#q3').val());
                $('#4').html($('#q4').val());
                $('#5').html($('#q5').val());
                $('#6').html($('#q6').val());
                $('#7').html($('#q7').val());
                $('#8').html($('#q8').val());
                $('#9').html($('#q9').val());
                $('#10').html($('#q10').val());
                $('#11').html($('#q11').val());
                $('#11b').html($('#q11b').val());
                $('#12').html($('#q12').val());
                $('#13').html($('#q13').val());
                $('#14').html($('#q14').val());
               
                classie.addClass(messageEl, 'show');
            }
        });
    </script>

    <script src="_framework/blazor.server.js"></script>
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.6.0/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.flurry.min.js"></script>
    <script>
        $('body').flurry({
            character: '❅❆',
            height: 1240,
            speed: 5400,
            wind: 200,
            windVariance: 220,
            frequency: 7,
            large: 40,
            small: 4
        });

    </script>
</body>